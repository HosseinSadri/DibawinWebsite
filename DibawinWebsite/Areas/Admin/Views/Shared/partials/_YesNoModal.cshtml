@{
    Layout = null;
}
@model _RecordsSettingViewModel

@if (Model != null)
{
    <!-- .modal -->
    <div class="modal modal-danger fade" id="modal-danger">
        <!-- .modal-dialog -->
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">هشدار حذف !</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>آیا از حذف این آیتم مطمئن هستید؟</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline" data-dismiss="modal">بستن</button>
                    <button id="removeItem" class="btn btn-outline float-right">حذف آیتم</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(function () {
        
        var pId = "";
        $("a#btnRemove").on("click", function () {
            pId = $(this).data("id");
        })
        $("button#removeItem").on("click", function () {
            window.location.href = `/@Model.AreaName/@Model.ControllerName/@Model.ActionsName.PermanentRemove/` + pId;
        })
    })
</script>