
@{
    ViewData["Title"] = "لیست کاربران";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";   
}


@model List<ApplicationUser>
   
<!-- Main content -->
<div>
    <section class="content">
        <div class="row">
            <div class="col-12">

                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">لیست کاربران</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped table-responsive">
                            <thead>
                                <tr>
                                    <th>ردیف</th>
                                    <th>نام کاربری</th>
                                    <th>ایمیل</th>
                                    <th>شماره تلفن</th>
                                    <th>تایید ایمیل</th>
                                    <th>تایید شماره تلفن</th>
                                    <th>ویرایش</th>
                                    <th>حذف</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th> ردیف</th>
                                    <th>نام کاربری</th>
                                    <th>ایمیل</th>
                                    <th>شماره تلفن</th>
                                    <th>تایید ایمیل</th>
                                    <th>تایید شماره تلفن</th>
                                    <th>ویرایش</th>
                                    <th>حذف</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @{int i = 1;}
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.UserName</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.UserName</td>
                                    <td>@item.UserName</td>
                                    <td>
                                        <button type="button" class="btn btn-block btn-primary btn-xs">ویرایش</button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-block btn-danger btn-xs">حذف</button>
                                    </td>
                                </tr>
                                    i++;
                                }


                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

