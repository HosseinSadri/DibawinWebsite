
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model CategoryViewModel
<section class="content">
    <div class="row">
        <!-- (right) -->
        <div class="col-xl-6 col-lg-12">
            <div class="box box-bordered">
                <div class="box-header with-border">
                    <h3 class="box-title">مشخصات پروژه</h3>
                </div>
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group row">
                            <label for="txt1" class="col-sm-4 col-form-label">عنوان دسته بندی <span class="red-color">*</span></label>
                            <div class="col-sm-8">
                                <input asp-for="Name" class="form-control" type="text" id="txt1">
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txt1" class="col-sm-4 col-form-label">عنوان لاتین <span class="red-color">*</span></label>
                            <div class="col-sm-8">
                                <input asp-for="LatinName" class="form-control" type="text" id="txt1">
                                <span asp-validation-for="LatinName"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txt1" class="col-sm-4 col-form-label">عنوان لاتین <span class="red-color">*</span></label>
                            <div class="col-sm-8">
                                <input asp-for="LatinName" class="form-control" type="text" id="txt1">
                                <span asp-validation-for="LatinName"></span>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info pull-left">ثبت پروژه</button>
                        <button type="reset" class="btn btn-low-priotity pull-left margin-l-10">تازه سازی فرم</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>


