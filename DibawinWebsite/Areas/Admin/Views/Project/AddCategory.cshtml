
@{
    ViewData["Title"] = "دسته بندی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var CatList = ViewData["CatList"] as List<Category>;
}

@model CategoryViewModel
<section class="content">
    <div class="row">
        <!-- (right) -->
        <div class="col-xl-6 col-lg-12">
            <div class="box box-bordered">
                <div class="box-header with-border">
                    <h3 class="box-title">افزودن دسته بندی</h3>
                </div>
                <form asp-area="Admin" asp-controller="Project" asp-action="AddCategoryConfirm" method="post" class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group row">
                            <label for="txt1" class="col-sm-4 col-form-label">عنوان دسته بندی <span class="red-color">*</span></label>
                            <div class="col-sm-8">
                                <input asp-for="Name" class="form-control" type="text" id="txt1">
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txt2" class="col-sm-4 col-form-label">عنوان لاتین</label>
                            <div class="col-sm-8">
                                <input asp-for="LatinName" class="form-control" type="text" id="txt2">
                                <span asp-validation-for="LatinName"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txt3" class="col-sm-4 col-form-label">سردسته </label>
                            <div class="col-sm-8">
                                <select asp-for="ParentId" class="form-control select2" style="width: 100%;" id="txt3">
                                    @if (CatList != null)
                                    {
                                        if (CatList.Count > 0)
                                        {
                                            <option value="-1">فاقد سردسته</option>
                                            foreach (var item in CatList)
                                            {
                                                if (item.ParentId > 0)
                                                {
                                                    <option value="@item.Id" title="@item.LatinName">@($"{item.Parent.Name} - {item.Name}")</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Id" title="@item.LatinName">@item.Name</option>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <option selected="selected" value="-1">فاقد دسته</option>
                                        }
                                    }
                                    else
                                    {
                                        <option selected="selected" value="-1">فاقد دسته</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txt4" class="col-sm-4 col-form-label">توضیحات</label>
                            <div class="col-sm-8">
                                <textarea rows="2" asp-for="Description" class="form-control" type="text" id="txt4"></textarea>
                                <span asp-validation-for="Description"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txt5" class="col-sm-4 col-form-label">لینک</label>
                            <div class="col-sm-8">
                                <input asp-for="ConnectedLink" class="form-control" type="text" id="txt5">
                                <span asp-validation-for="ConnectedLink"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txt6" class="col-sm-4 col-form-label">نام مستعار</label>
                            <div class="col-sm-8">
                                <input asp-for="AliasName" class="form-control" type="text" id="txt6">
                                <span asp-validation-for="AliasName"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txt7" class="col-sm-4 col-form-label">متن Alt</label>
                            <div class="col-sm-8">
                                <input asp-for="TitleAltName" class="form-control" type="text" id="txt7">
                                <span asp-validation-for="TitleAltName"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">وضعیت</label>
                            <div class="col-sm-8">
                                <input asp-for="Status" type="checkbox" id="md_checkbox_6" class="chk-col-blue" value="true" checked />
                                <label for="md_checkbox_6">فعال</label>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info pull-left">ثبت</button>
                        <button type="reset" class="btn btn-low-priotity pull-left margin-l-10">تازه سازی فرم</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>


